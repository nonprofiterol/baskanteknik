<?xml version="1.0" encoding="UTF-8" ?>

<themeeditor>
	<version value="1.4">
	<ccc available="true" />
	<guest_checkout available="true" />
	<one_page_checkout available="true" />
	<store_locator available="true" />
	</version>
	<author>themelexus</author>
<name>Live Theme Editor</name>	
<selectors>
	<items>
		<header>Body Content</header>
		<match>body</match>		
		<item>
			<type>text</type>
			<label>Background Color</label>
			<selector>body</selector>
			<attrs>background-color</attrs>
		</item>
		<item>
		<type>image</type>
			<label>Background Image</label>
			<selector>body</selector>
			<attrs>background-image</attrs>
		</item> 		

	 	<item>
			<type>fontsize</type>
			<label>Font-Size</label>
			<selector>body,body #page</selector>
			<attrs>font-size</attrs>
		</item> 

		<item>
			<type>text</type>
			<label>Text Color</label>
			<selector>.box-content</selector>
			<attrs>color</attrs>
		</item> 

		<item>
			<type>text</type>
			<label>Link Color</label>
			<selector>body a,body #page a</selector>
			<attrs>color</attrs>
		</item> 
	</items>
 
	<items>
		<header>TopBar</header>
		<match>topbar</match>
		<item>
			<type>text</type>
			<label>Background Color</label>
			<selector>#topbar</selector>
			<attrs>background-color</attrs>
		</item> 
	 	<item>
			<type>text</type>
			<label>Color Text</label>
			<selector>#topbar,#topbar .btn-dropdown span</selector>
			<attrs>color</attrs>
		</item> 
	 	<item>
			<type>text</type>
			<label>Color Link</label>
			<selector>#topbar a,#topbar .btn.btn-theme-normal</selector>
			<attrs>color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Border Color</label>
			<selector>#topbar</selector>
			<attrs>border-color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Icon Color</label>
			<selector>#topbar .fa,#topbar .btn.btn-theme-normal .fa</selector>
			<attrs>color</attrs>
		</item>
	</items>
	<items>
		<header>Header</header>
		<match>header-main</match>
		<item>
			<type>text</type>
			<label>Background Color</label>
			<selector>#header-main</selector>
			<attrs>background-color</attrs>
		</item> 
		<item>
			<type>image</type>
			<label>Background Image</label>
			<selector>#header-main</selector>
			<attrs>background-image</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Color Text</label>
			<selector>
				#header-main,#header-main h1,#header-main h2,#header-main h3,#header-main h4,#header-main h5,#header-main h6
			</selector>
			<attrs>color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Color Link</label>
			<selector>#header-main a,#header-main #cart a .fa</selector>
			<attrs>color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Icon Background</label>
			<selector>#header-main .support .media .pull-left, #header #cart .media .pull-left</selector>
			<attrs>background-color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Icon Color</label>
			<selector>#header-main .fa,#header #cart .icon-cart</selector>
			<attrs>color</attrs>
		</item>
		
	</items>
	<items>
		<header>Main Menu</header>
		<match>pav-mainnav</match>	
		<item>
			<type>text</type>
			<label>Background Color</label>
			<selector>.pav-megamenu .navbar-default</selector>
			<attrs>background-color</attrs>
		</item> 
		<item>
			<type>image</type>
			<label>Background Image</label>
			<selector>.pav-megamenu .navbar-default</selector>
			<attrs>background-image</attrs>
		</item>

	 	<item>
			<type>text</type>
			<label>Color Link</label>
			<selector>.pav-megamenu .navbar-nav > li > a</selector>
			<attrs>color</attrs>
		</item>

		<item>
			<type>text</type>
			<label>Link hover</label>
			<selector>.pav-megamenu .navbar-nav > li > a:hover</selector>
			<attrs>color</attrs>
		</item>
		
	</items>



	<items>
		<header>Container</header>
		<match>columns</match>	
		
		<item>
			<type>text</type>
			<label>Text Heading</label>
			<selector>#columns .content-top .box .box-heading span, .product-related .box-heading span</selector>
			<attrs>color</attrs>
		</item>
	</items>
	<!-- Vertical Menu -->

	<items>
		<header>Vertical Menu</header>
		<match>pav-verticalmenu</match>	
		
		<item>
			<type>text</type>
			<label>Title Bg</label>
			<selector>#pav-verticalmenu .box-heading</selector>
			<attrs>background-color</attrs>
		</item>

		<item>
			<type>text</type>
			<label>Title Color</label>
			<selector>#pav-verticalmenu .box-heading</selector>
			<attrs>color</attrs>
		</item>

		<item>
			<type>text</type>
			<label>Text Color</label>
			<selector>
				#pav-verticalmenu .navbar-nav .menu-icon .menu-title
			</selector>
			<attrs>color</attrs>
		</item>

		<item>
			<type>text</type>
			<label>Hover Link</label>
			<selector>
				#pav-verticalmenu .verticalmenu li a:hover
			</selector>
			<attrs>color</attrs>
		</item>

		<item>
			<type>text</type>
			<label>Border Color</label>
			<selector>
				#pav-verticalmenu .box-content
			</selector>
			<attrs>border-color</attrs>
		</item>
	</items>

	
	<items>
		<header>Footer</header>
		<match>footer-center</match>
		<item>
			<type>text</type>
			<label>Bg-color Footer Top</label>
			<selector>#footer .footer-top .custom</selector>
			<attrs>background-color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Background Color</label>
			<selector>#footer</selector>
			<attrs>background-color</attrs>
		</item> 

		<item>
			<type>image</type>
			<label>Background Image</label>
			<selector>#footer</selector>
			<attrs>background-image</attrs>
		</item> 

		<item>
			<type>text</type>
			<label>Icon Color</label>
			<selector>
				.social a				
			</selector>
			<attrs>color</attrs>
		</item>

		<item>
			<type>text</type>
			<label>Text Color</label>
			<selector>
				#footer,#footer .box .box-heading,#footer .box.pavgooglemap .box-heading,#powered				
			</selector>
			<attrs>color</attrs>
		</item> 

		<item>
			<type>text</type>
			<label>Link Color</label>
			<selector>#footer a</selector>
			<attrs>color</attrs>
		</item>

			

	</items>

</selectors>

<elements>
	<items>
		<header>Product element</header>
		<match>product1</match>
		<!-- sale -->
		<item>
			<type>text</type>
			<label>Bg Sale Top</label>
			<selector>.product-label</selector>
			<attrs>border-top-color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Bg Sale</label>
			<selector>.product-label.product-label-special span</selector>
			<attrs>background-color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Color Sale</label>
			<selector>.product-label</selector>
			<attrs>color</attrs>
		</item>
		<!-- zoom -->
		<item>
			<type>text</type>
			<label>Icon Zoom Bg</label>
			<selector>.product-block .product-zoom</selector>
			<attrs>background-color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Icon Zoom Color</label>
			<selector>.product-block .product-zoom,.product-block .product-zoom .fa, .product-block .product-zoom span</selector>
			<attrs>color</attrs>
		</item>
		<!-- quickview -->
		<item>
			<type>text</type>
			<label>Quick View Bg</label>
			<selector>.product-block .pav-colorbox</selector>
			<attrs>background-color</attrs>
		</item>

		<item>
			<type>text</type>
			<label>Quick View Color</label>
			<selector>
				.product-block .pav-colorbox,.product-block .pav-colorbox .fa,
				.product-block .pav-colorbox span
			</selector>
			<attrs>color</attrs>
		</item>
	</items>
	<!-- product color -->
	<items>
		<header>Product Meta</header>
		<match>product</match>
		<item>
			<type>text</type>
			<label>Product Name</label>
			<selector>.product-block .name a</selector>
			<attrs>color</attrs>
		</item> 

		<item>
			<type>text</type>
			<label>Color Price</label>
			<selector>.price</selector>
			<attrs>color</attrs>
		</item>  		


		<item>
			<type>text</type>
			<label>Color Price New</label>
			<selector>.price .price-new</selector>
			<attrs>color</attrs>
		</item>  		
 		<item>
			<type>text</type>
			<label>Color Price Old</label>
			<selector>.price .price-old</selector>
			<attrs>color</attrs>
		</item> 

		<item>
			<type>text</type>
			<label>Icon Color</label>
			<selector>
				.product-block .product-icon
			</selector>
			<attrs>color</attrs>
		</item>

		<item>
			<type>text</type>
			<label>Bg Add To Cart</label>
			<selector>
				.btn.btn-shopping-cart
			</selector>
			<attrs>background-color</attrs>
		</item> 

		<item>
			<type>text</type>
			<label>Button border</label>
			<selector>
				.btn.btn-shopping-cart,.product-block .product-icon
			</selector>
			<attrs>border-color</attrs>
		</item>	

	</items>

</elements>
</themeeditor>
